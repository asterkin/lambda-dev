#!/bin/bash

aws lambda add-permission \
--function-name CreateThumbnail \
--statement-id 19-21-2016-19-20 \
--action "lambda:InvokeFunction" \
--principal s3.amazonaws.com \
--source-arn arn:aws:s3:::face-picture \
--source-account 749364635755 \
--profile admin

aws s3api put-bucket-notification \
--bucket face-picture \
--notification-configuration file://./invoke-create-thumbnail.json \
--profile admin



